		  -DQT_BUILD_QTWEBCHANNEL=OFF \
		  -DQT_BUILD_QTWEBENGINE=OFF \
		  -DQT_BUILD_QTWEBSOCKETS=OFF \
		  -DQT_BUILD_QTWEBVIEW=OFF \
		  -DQT_BUILD_QTLOCATION=OFF \
		  -DQT_BUILD_QTHTTPServer=OFF \
		  -DQT_BUILD_QTCOAP=OFF \
		  -DQT_BUILD_QTGRPC=OFF \
